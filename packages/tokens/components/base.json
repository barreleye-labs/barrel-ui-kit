      },
      "color": {
        "background": "{color.background.accordion}",
        "text": "{color.text.primary}"
      },
      "border": {
        "color": "{color.border.default}",
        "radius": "{radius.medium}"
      }
    },
    "JoyAccordionGroup": {
      "padding": {
        "default": "{spacing.small}"
